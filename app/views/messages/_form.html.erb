<%= form_for(@message, html: {class: "form-horizontal"}) do |f| %>


<% if @message.errors.present? %>
    <div class="alert alert-danger">
      <%= alert %>
      <ul>
        <% @message.errors.full_messages.each do |full_message| %>
          <li>
            <%= full_message %>
          </li>
        <% end %> 
      </ul>
    </div>
  <% end %>
  
  <div class="form-group">
    <label for="message_name" class="control-label col-md-2">
      名前:</label>
    <div class="col-md-4">
      <%= f.text_field :name, :class => "form-control", :placeholder =>"taro" %>
    </div>
  </div>
  
  <div class="form-group">
     <label for="message_name" class="control-label col-md-2">
       年齢:</label>
       <div class="col-md-4">
      <%= f.text_field :age, :class => "form-control", :placeholder =>"15" %>
        </div>
  </div>
  
 
<div class="form-group">
  <label for="message_body" class="control-label col-md-2">
  内容:</label>
  <div class="col-md-4">
  <%= f.text_area :body, :class => "form-control", :placeholder => "hello" %>
  </div>
  </div>
  <div class="form-group">
   <div class="col-sm-offset-2 col-sm-10">
  <%= f.submit class: "btn btn-sm btn-primary" %>
   </div>
</div>
<% end %>
