<div class="panel panel-default">
  <div class="panel-heading">
    メッセージ一覧
  </div>
    
  <div class="panel-body">
    <% @messages.each do |message| %>
      <span class="label label-info"><%= message.name %></span>
      <%= message.body %>
      <br>
    <% end %>
  </div>
</div>

<form class="form-inline">
<div class="form-group">
<%= form_for(@message, html: {class: "form-horizontal"}) do |f| %>
<label for="message_name" class="control-label col-md-2">
  名前:</label>
  <div class="col-md-4">
  <%= f.text_field :name, :class => "form-control", :placeholder =>"taro" %>
    </div>
  </div>
  
<div class="form-group">
  <label for="message_body" class="control-label col-md-2">
  内容:</label>
  <div class="col-md-4">
  <%= f.text_area :body, :class => "form-control", :placeholder => "hello" %>
  </div>
  </div>
  <%= f.submit class: "btn btn-sm btn-primary" %>
<% end %>
